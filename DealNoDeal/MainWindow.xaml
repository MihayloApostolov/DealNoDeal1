<Window x:Class="DealNoDeal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DealNoDeal"
        mc:Ignorable="d"
        Title="Зделка Или Не!" Height="400" Width="450" >
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="FontStyle" Value="Normal"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="0,0,0,10" >
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Button x:Name="LogInBtn" Content="Вход в Играта" HorizontalAlignment="Center"  Grid.Row="1" VerticalAlignment="Top" Width="80" Click="LogInBtn_Click" Margin="0,10,60,0" Height="23"/>
        <Label Content="Добре дошли в играта на &quot;Сделка или Не!&quot;. &#x0a;Кликнете бутона и започнете играта. &#x0a;Желаем Ви късмет!" 
               HorizontalAlignment="Center"  Grid.Row="0" VerticalAlignment="Center" Height="100" Width="300"/>
        






    </Grid>
</Window>
